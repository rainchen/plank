- form_for @user_session do |f|
  = f.error_messages
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.label 'Remember me?'
    = f.check_box 'remember_me'
  %p
    = f.submit "Sign In"
    = link_to "Register", new_user_path
    = link_to "Forget password", new_password_reset_path
    = link_to "Activate account", new_activation_path